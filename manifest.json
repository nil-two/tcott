{
  "manifest_version": 3,
  "name": "the-context-of-the-tweet",
  "short_name": "tcott",
  "version": "1.1",
  "description": "Investigate the context of the tweet",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://x.com/*/status/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "browser_style": true,
    "default_title": "Investigate the context of the tweet",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
